{
    "name": "osimhen-refresher",
    "version": "1.0.0",
    "description": "For Osimhen transfer refresher tool",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "dist": "electron-builder --publish=never"
    },
    "keywords": [
        "browser",
        "refresh",
        "automation",
        "electron",
        "galatasaray"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "puppeteer": "^21.6.1"
    },
    "build": {
        "appId": "com.galatasaray.refresher",
        "productName": "Osimhen Refresher",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "renderer.js",
            "index.html",
            "styles.css",
            "node_modules/**/*"
        ],
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        }
    }
}